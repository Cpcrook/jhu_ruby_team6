<div class='page-header'>
  <h2>Recipes for <%= @keyword %></h2>
</div>
<div class='row'>
  <% @results.each do |result| %>
    <div class='col-md-3'>
      <div class='thumbnail'>
        <div class='photo'>
          <%= link_to image_tag(result['thumbnail']), result['href'] %>
        </div>
        <div class='caption'>
          <h4><%= link_to sanitize(result['title']), result['href'] %></h4>
          <h5>Ingredients</h5>
          <%= sanitize result['ingredients'] %>
        </div>
      </div>
    </div>
  <% end %>
</div><!--close 'row'-->
